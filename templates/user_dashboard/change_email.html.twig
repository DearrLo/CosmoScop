{% extends 'base.html.twig' %}

{% block title %}Update Email â€” CosmoScop{% endblock %}

{% block body %}
<main class="main" aria-label="Section to update your email">
  <div class="form-container">
    <h1>Update my email</h1>

    {{ form_start(emailForm, {
      'attr': { 'aria-label': 'Update email form' }
    }) }}
      <div>
        {{ form_label(emailForm.mail) }}
        {{ form_widget(emailForm.mail, {
          'attr': {
            'class': 'form-control',
            'aria-label': 'New email address'
          }
        }) }}
        {{ form_errors(emailForm.mail) }}
      </div>

      <div class="centered-container">
        <button type="submit" class="btn" aria-label="Update my email address">Update</button>
      </div>
    {{ form_end(emailForm) }}

    <a href="{{ path('app_user_dashboard') }}" class="btn transparent" style="margin-top: 20px;">
      Back to my profile
    </a>
  </div>
</main>
{% endblock %}

