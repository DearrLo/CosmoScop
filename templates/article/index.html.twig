<div class="admin-section">
  <h2>List of the articles</h2>
  <table class="table">
  
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Content</th>
        <th>Date of publication</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for article in articles %}
        <tr>
          <td>{{ article.id }}</td>
          <td>{{ article.getTitle() }}</td>
          <td>
            {{ article.getContent()|length > 100 
                ? article.getContent()[:100] ~ '...'
                : article.getContent() }}
          </td>
          <td>{{ article.getPublicationDate()|date('Y-m-d') }}</td>
          <td class="article-actions">
            <a href="{{ path('app_article_show', { id: article.id }) }}" class="btn btn-small">See</a>
            <a href="{{ path('app_article_edit', { id: article.id }) }}" class="btn btn-small">Edit</a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="5">No article available</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
