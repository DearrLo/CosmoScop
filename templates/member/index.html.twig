<section class="admin-section members" aria-label="Members management section">
    <h2 class="h1-dashboard">Registered Members</h2>

    <div class="table-wrapper">
        <table class="table" aria-label="Table of registered users">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Email</th>
                    <th scope="col">Username</th>
                    <th scope="col">Marked favorite</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>{{ member.id }}</td>
                        <td>{{ member.getMail() }}</td>
                        <td>{{ member.getName() }}</td>
                        <td>{{ member.getFavorites|length }}</td>
                        <td>
                            <a href="{{ path('admin_user_dashboard', { 'id': member.id }) }}"
                               class="btn-see"
                               aria-label="View profile of {{ member.getName() }}">
                                See more
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No member found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>
