{% extends 'base.html.twig' %}

{% block body %}

	{% if mission.imageFilename %}
		<img class="article-banner" src="{{ asset('uploads/' ~ mission.imageFilename) }}" alt="{{ mission.title }}">
	{% endif %}

	<article class="article-show-container">

		<div style="display: flex; justify-content: space-between; align-items: center;">
			<h1>{{ mission.title }}</h1>
		</div>

		<p class="publication-date">
			Launch Date:
			{{ mission.launchDate|date('d/m/Y') }}
		</p>

		<p class="publication-date">
			Agency:
			{{ mission.agency }}
		</p>

		<div class="article-content">
			{{ mission.description|nl2br }}
		</div>
		
		{# Boutons admin (edit) #}
		{% if is_granted('ROLE_ADMIN') %}
			<div class="centered-container">
				<div class="action-buttons">
					<a href="{{ path('app_future_mission_edit', { id: mission.id }) }}" class="btn">Edit</a>
				</div>
			</div>
		{% endif %}

		{# Lien retour accueil #}
		<div class="centered-container">
			<a href="{{ path('app_actuality_index') }}" class="btn-back-home">
				Back to Home Page
			</a>
		</div>

	</article>
{% endblock %}
