{% block body %}

  {{ form_start(form, {
    'attr': {
      'class': 'form-container',
      'aria-label': 'Form to add or edit a future space mission'
    }
  }) }}

    {# Titre #}
    {{ form_row(form.title, {
      'attr': {
        'class': 'form-control',
        'placeholder': 'Enter mission title',
        'aria-label': 'Mission title'
      }
    }) }}

    {# Date de lancement #}
    {{ form_row(form.launchDate, {
      'attr': {
        'class': 'form-control',
        'aria-label': 'Launch date of the mission'
      }
    }) }}

    {# Upload de l'image #}
    {{ form_row(form.imageFile, {
      'attr': {
        'class': 'form-control',
        'aria-label': 'Upload an image for the mission'
      }
    }) }}

    {# Descri mission #}
    {{ form_row(form.description, {
      'attr': {
        'class': 'form-control content-field',
        'placeholder': 'Describe the mission details here',
        'aria-label': 'Description of the mission',
        'rows': 10
      }
    }) }}

    {# Agence spatiale #}
    {{ form_row(form.agency, {
      'attr': {
        'class': 'form-control',
        'placeholder': 'e.g. NASA, ESA, CNSA',
        'aria-label': 'Space agency responsible for the mission'
      }
    }) }}

    <div class="centered-container">
      <button type="submit" class="btn btn-primary" aria-label="Save the mission">Save</button>
    </div>

  {{ form_end(form) }}
{% endblock %}
