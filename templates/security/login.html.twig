{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
      <h1 class="h1-registration">Connexion</h1>

      {% if error %}
        <div style="color: red; margin-bottom: 15px;">
          {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
      {% endif %}

      <form method="post" action="{{ path('app_login') }}">
        <div>
          <label for="username">Email :</label>
          <input type="email" name="_username" id="username" class="form-control" value="{{ last_username }}" required>
        </div>

        <div>
          <label for="password">Mot de passe :</label>
          <input type="password" name="_password" id="password" class="form-control" required>
        </div>

        {# Protection CSRF automatique de symfo #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn">Se connecter</button>
      </form>
{% endblock %}
