{% extends 'base.html.twig' %}

{% block title %}My Favorites â€” CosmoScop{% endblock %}

{% block body %}
<main id="main" aria-label="Favorites list page">
    <h1 class="h1-dashboard">My Favorite Articles</h1>

    {% if favorites is empty %}
        <p>You haven't added any articles to your favorites yet.</p>
    {% else %}
        <section aria-labelledby="favorites-list">
            <h2 id="favorites-list">Your saved articles</h2>
            <ul>
                {% for favorite in favorites %}
                    <li>
                        <a href="{{ path('app_article_show', {id: favorite.article.id}) }}"
                           aria-label="Read article {{ favorite.article.title }}">
                            {{ favorite.article.title }}
                        </a>
                        <form action="{{ path('app_favorite_remove', {id: favorite.id}) }}" method="post">
                            <button type="submit"
                                    aria-label="Remove {{ favorite.article.title }} from favorites">
                                Remove from favorites
                            </button>
                        </form>
                    </li>
                {% endfor %}
            </ul>
        </section>
    {% endif %}
</main>
{% endblock %}
