{% extends 'base.html.twig' %}

{% block body %}

	{% if actuality.imageFilename %}
		<img class="article-banner" src="{{ asset('uploads/actuality_images/' ~ actuality.imageFilename) }}" alt="{{ actuality.title }}">
	{% endif %}

	<article
		class="article-show-container">

		{# Titre de l'actualité + bouton favori #}
		<div style="display: flex; justify-content: space-between; align-items: center;">
			<h1>{{ actuality.title }}</h1>

			{% if is_granted('ROLE_USER') %}
				<form method="post" action="{{ path('app_favorite_toggle', { id: actuality.id }) }}" style="display: inline;">
					<button type="submit" class="favorite-btn" title="Add to favorites" aria-label="Toggle favorite for {{ actuality.title }}">
						{% if actualityIsFavorite %}
							{# étoile pleine #}
							<svg xmlns="http://www.w3.org/2000/svg" class="star-icon filled" viewbox="0 0 24 24" width="26" height="26">
								<path d="M12 .587l3.668 7.431L24 9.75l-6 5.845L19.335 24 12 20.202 4.665 24 6 15.595 0 9.75l8.332-1.732z"/>
							</svg>
						{% else %}
							{# étoile vide #}
							<svg xmlns="http://www.w3.org/2000/svg" class="star-icon" viewbox="0 0 24 24" width="26" height="26">
								<path fill="none" stroke="#FFD700" stroke-width="2" d="M12 .587l3.668 7.431L24 9.75l-6 5.845L19.335 24 12 20.202 4.665 24 6 15.595 0 9.75l8.332-1.732z"/>
							</svg>
						{% endif %}
					</button>
				</form>
			{% endif %}
		</div>

		{# Date de publication #}
		<p class="publication-date">
			Published
			{{ actuality.publicationDate ? actuality.publicationDate|date('d/m/Y') : 'Unknown date' }}
		</p>

		{# Contenu de l'actualité #}
		<div class="article-content">
			{{ actuality.content|raw }}
		</div>

		{# Boutons admin (edit / delete) #}
		{% if is_granted('ROLE_ADMIN') %}
			<div class="centered-container">
				<div class="action-buttons">
					<form method="post" action="{{ path('app_actuality_delete', { id: actuality.id }) }}" onsubmit="return confirm('Are you sure you want to delete ?');">
						<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ actuality.id) }}">
						<button class="btn">Delete</button>
						<a href="{{ path('app_actuality_edit', { id: actuality.id }) }}" class="btn">Edit</a>
					</form>
				</div>
			</div>
		{% endif %}

		{# Lien retour accueil #}
		<div class="centered-container">
			<a href="{{ path('app_actuality_index') }}" class="btn-back-home">
				Back to Home Page
			</a>
		</div>
	</article>


	{# SECTION COMMENTAIRES #}
	<section class="comments-section">
		<h2>Comments</h2>

		<div class="comments-list">
			{% for comment in actuality.comments %}
				<div class="comment-card">
					<p>{{ comment.content }}</p>
					<small>by
						{{ comment.user.mail }}
						on
						{{ comment.createdAt|date('Y-m-d H:i') }}</small>
				</div>
			{% else %}
				<p>No comments yet. Be the first to comment!</p>
			{% endfor %}
		</div>

		{% if app.user %}
			<div class="comment-form">
				<h3>Leave a comment</h3>
				{{ form_start(form) }}
				{{ form_widget(form) }}
				<button class="btn">Submit</button>
				{{ form_end(form) }}
			</div>
		{% else %}
			<p>
				<em>You must be logged in to post a comment.</em>
			</p>
		{% endif %}
	</section>

{% endblock %}
